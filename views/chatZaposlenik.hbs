<html>

<head>
    <title>Chat App</title>
    {{>links}}
</head>

<body>

    <!-- PRELOADER: HTML i SKRIPTA-->
    <div id="preloader">
        <div id="animacija">
        </div>
    </div>
    <script>
        $(window).on("load", () => {
            $("#animacija").delay(10).fadeOut();
            $("#preloader").delay(100).fadeOut();
        })
    </script>

    <div id="login-message"></div>

    {{>header}}

    <div class="container">
        <br><br><br><br>
        <div class="row">
            <div class="col-md-6">
                <h1>LIVE CHAT</h1>
            </div>

        </div>
        <div class="chat">
            <div class="chat__main">
                <div class="row">
                    <div class="col-md-4 col-xs-12 text-center">

                        <div id="sidebar" class="chat__sidebar text-center">

                        </div>
                    </div>



                    <div class="col-md-8 col-xs-12 text-center">
                        <div class="row">
                            <div style="" id="socket-id" data-socketId=""></div><br>

                            <div id="message-board" class="chat__messages" style="max-height: 230px;overflow:auto;">
                            </div>
                            <div class="compose">
                                <input id="message" class="form-control" placeholder="Poruka" required
                                    autocomplete="off">
                                <button class="btn" style="margin-right: 5px ;" id="submit">POSALJI</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="row">
        {{>footer}}

    </div>



    <script id="message-template" type="text/html">
            <div class="message \{{username}}">
                <p>
                    <span class="message__name">\{{username}}</span>
                    <span class="message__meta">\{{createdAt}}</span>
                </p>
                <p>\{{text}}</p>
            </div>
</script>

    <script id="location-template" type="text/html">
    <div class="message">
        <p>
            <span class="message__name">\{{username}}</span>
            <span class="message__meta">\{{createdAt}}</span>
        </p>
        <p><a href="{{url}}" target="_blank">Moja trenutna lokacija</a></p>
    </div>
</script>

    <script id="sidebar-template" type="text/html">
    <h2 class="room-title">Sobe</h2>
    <div class="col-md-12 text-center">
        <ul class="users col-md-12 text-center">
            \{{#rooms}}
                <li><button class="liveChatKorisnici btn btn-default" value="\{{id}}">\{{id}}</button></li>
            \{{/rooms}}
        </ul>
    </div>
     
</script>
    <input id="status-usera" value="{{status}}" style="display: none;">
    <div id="foo" style="display: none;"></div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"
        integrity="sha512-AcZyhRP/tbAEsXCCGlziPun5iFvcSUpEz2jKkx0blkYKbxU81F+iq8FURwPn1sYFeksJ+sDDrI5XujsqSobWdQ=="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.1.0/mustache.js"></script>

    <script src="https://rawgit.com/moment/moment/2.2.1/min/moment.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/qs/6.5.1/qs.min.js"></script>
    <script src="/js/chat.js"></script>
    <script type="module" src="/js/liveChatAdmin.js"></script>



</body>

</html>